{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "lib": ["ES2021.String", "ES7"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "docs"]
}
